path-constant TOP : . ;
include $(TOP)/../boost-version.jam ;
include $(TOP)/../fost-base/fost.jam ;

use-project fost-aws : ../fost-aws ;
use-project fost-base : ../fost-base ;
use-project fost-beanbag : ../fost-beanbag ;
use-project fost-internet : ../fost-internet ;
use-project fost-orm : ../fost-orm ;
use-project fost-py : ../fost-py ;
use-project fost-web : ../fost-web ;

fost-project fost-meta ;


alias fost :
        ../fost-aws//fost
        ../fost-base//fost
        ../fost-beanbag//fost
        ../fost-internet//fost
        ../fost-orm//fost
        ../fost-py//fost
        ../fost-web//fost
    ;

alias docs :
        Docs
    ;
explicit docs ;

alias examples :
        ../fost-aws//examples
        ../fost-base//examples
        ../fost-internet//examples
        ../fost-orm//examples
        ../fost-py//examples
    ;
explicit examples ;

