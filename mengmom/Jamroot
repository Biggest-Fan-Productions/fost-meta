# Allow other scripts to work relative to the Jamroot location
path-constant TOP : . ;

# Some includes used to provide new rules and configuration
include ../boost-version.jam ;
include ../fost-base/fost.jam ;

# Bring in the projects used
use-project fost-base : ../fost-base ;
use-project fost-beanbag : ../fost-beanbag ;
use-project fost-internet : ../fost-internet ;
use-project fost-orm : ../fost-orm ;
use-project fost-web : ../fost-web ;
use-project fostgres : ../fostgres ;
use-project odin : ../odin ;

#Define this project
fost-project mengmom
    :
        <include>../fost-internet/Cpp/include
        <include>../fost-orm/Cpp/include
        <include>../fost-web/Cpp/include
    ;

# The parts of the system that need to be built
alias fost :
        ../fost-base//fost
        ../fost-internet//fost
        ../fost-orm//fost
        ../fost-web//fost
    ;

alias beanbag :
        ../fost-beanbag//fost
    ;
explicit beanbag ;

alias fostgres :
        ../fostgres//fostgres
    ;
explicit fostgres ;

alias odin :
        ../odin//odin
    ;
explicit odin ;

alias test :
        ../fost-base//tests
        ../fost-beanbag//test
        ../fost-internet//tests
        ../fost-orm//tests
        ../fostgres//test
    ;
explicit test ;

alias all :
        ../fost-base//all
        ../fost-internet//all
        ../fost-orm//all
        ../fost-web//all
        beanbag
        fost
        fostgres
        odin
        test
    ;
explicit all ;
